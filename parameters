pipeline{
 agent any
 parameters{
   string(name: 'PERSON', defaultValue:'Mr Jenkins',description:"the name of a person")
   text(name:"Biography",defaultValue:'',description:'the text content')
   choice(name:'Choice',defaultValue:['a','b','c'],description:'pick one from choices')
   password(name:'Password',defaultValue'SECRET',description: 'enter a password')
  }
  stages{
   stage('build'){
    steps{
     echo "hello ${params.PERSON}"
     echo "hello ${params.Biography}"
     echo "hello ${params.Choice}"
     echo "hello ${params.Password}"
     }
    }
  }
}
     
